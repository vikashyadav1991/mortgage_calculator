services:
  - type: web
    name: mortgage-calculator
    runtime: python
    buildCommand: pip install -r requirements.txt && mkdir -p logs
    startCommand: gunicorn --bind 0.0.0.0:$PORT app:app
    envVars:
      - key: PYTHON_VERSION
        value: 3.9.0
      - key: FLASK_ENV
        value: production
      - key: FORCE_HTTPS
        value: "true"
      - key: SECRET_KEY
        generateValue: true
    autoDeploy: true
    plan: free
    healthCheckPath: /health
    numInstances: 1